include lib/std/io 

fun divby
	mod 0 =? ;

act fizzbuzz var max
	1 var x
	cycle: $x $max >? then: break ;
		elect: 
			$x 15 divby then: "FizzBuzz!" prints ;
			$x  3 divby then: "Fizz" prints ;
			$x  5 divby then: "Buzz" prints ;
			$x printi ;
		"\n" prints
		$x 1 + x! 
	:cycle
:act

fun xdiv
	var n var m
	elect:
		$n 0 =?  then "Division by zero, please fix" prints ;
		$n 1 =?  then $m ;
		$m $n =? then 1 ;
		$m $n >? then 0 ;
		$m $n / ;
:fun

act main 100 fizzbuzz ;

include lib/std/io

# n! #
fun factorial var n
	1 var result
	cycle: $n 0 =? then break ;
		$result $n * result!
		$n 1 - n!
	:cycle
	$result
:fun

# x ^ y #
fun expo var x var y
	1 var total
	cycle $x 0 =? then break ;
		$total $y * total!
		$x 1 - x! 
	:cycle
	$total
:fun

act main
	10 factorial printi "\n" prints
	5 3 expo printi "\n" prints
:act
